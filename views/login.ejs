<%- include("partials/header")-%>
<div class="login-div">


    <form action="/users/login" method="post">
        <div class="login-heading">
            <h2 class="login-h2">User Login</h2>
        </div>
        <div class="form-group">

            <input class="form-control" type="email" name="email" id="" placeholder="Enter Your Email">
        </div>
        <div class="form-group">

        </div>
        <input class="form-control" type="password" name="password" id="" placeholder="Enter Your Password">
        <% if(msg){ %>
        <h2 class="msg"> <%= msg %> </h2>
        <%}%>
        <div  class="bottom-login">

            <button class="btn btn-success" type="submit">Login</button>
            <a   class="btn btn-secondary" href="/users/register">Register</a>
            <div style="margin-top: 30px;">
                <h2 style="margin: 10px 0;color: red;font-size: 20px;">Admin Github Login</h2>
                <a  class="btn btn-dark" href="/auth/github">Github</a>
            </div>
        </div>
        <a href="/users/forgot">Forgot Password ?</a>

</form>
</div>